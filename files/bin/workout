#!/bin/bash

# workouts array
declare -a WORKOUTS=("Jumping Jacks" "Push Ups" "Squats" "Down Stretch" "Crunches" "Lunges" "Butterfly Stretch" "Supermans" "Side Kicks" "Neck Exercises" "Squats and Calf Raises" "Pull Ups")

# zoom in
xdotool key Ctrl+plus
xdotool key Ctrl+plus
xdotool key Ctrl+plus
xdotool key Ctrl+plus
xdotool key Ctrl+plus
xdotool key Ctrl+plus

printf "\n\n\n\n\n\n\n"
    
# 5 seconds to get ready
printf "\e[1;33mGet ready!\e[0m\n\n"
secs=5
while [ $secs -gt 0 ]
do
    echo -ne "$secs\033[0K\r"
    sleep 1
    secs=$(( secs -1 ))
done

# start workouts
for workout in "${WORKOUTS[@]}"; do
    # print exercise name
    printf "\e[1;32m$workout\e[0m\n\n"
    # starting in: ...
    secs=5
    while [ $secs -gt 0 ]
    do
        echo -ne "Starting in: $secs\033[0K\r"
        sleep 1
        secs=$(( secs -1 ))
    done

    # exercise countdown
    secs=60
    while [ $secs -gt 0 ]
    do
        echo -ne "$secs\033[0K\r"
        sleep 1
        secs=$(( secs -1 ))
    done

    # exercise finished sound
    aplay ~/Music/singing_bowl.wav >/dev/null 2>&1 &

done

# workout finished message
printf "\n"
echo "Finished!"
printf "\n"

# Zoom back out
xdotool key Ctrl+minus
xdotool key Ctrl+minus
xdotool key Ctrl+minus
xdotool key Ctrl+minus
xdotool key Ctrl+minus
xdotool key Ctrl+minus

