
#!/bin/bash


# bash_aliases
cp /home/$USER/.bash_aliases files/

# vim
cp /home/$USER/.vimrc files/

# vim skeletons
cp -r /home/$USER/.vim/skeletons files/

# sudoers.d
sudo cp /etc/sudoers.d/jvalcher files/

# gtk.css
cp /home/$USER/.config/gtk-3.0/gtk.css files/ 

# gnome-terminal
dconf dump /org/gnome/terminal/ > files/gnome_terminal_jvalcher 

# Tmux
cp /home/$USER/.tmux.conf files/ 

# Scripts
cp -r /home/$USER/Scripts files/

# ~/bin
cp -r /home/$USER/bin files/

# wallpapers
rsync -a --delete /home/$USER/Pictures/wallpapers/ wallpapers/

# singing bowl sound
cp /home/$USER/Music/singing_bowl.wav files/

# push to github
git add . 
git commit -m "update"
gitPush


